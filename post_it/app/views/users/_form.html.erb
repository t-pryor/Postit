<%= render '/shared/errors', obj: @user %>

<%= form_for(@user) do |f| %>

    <div class='control-group'>
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true %>
    </div>

    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <p>
      <%= f.submit(@user.new_record? ? 'Register' : 'Update Profile', class: 'btn btn-primary')%> &nbsp &nbsp

      <%= link_to 'Cancel', :back %>
    </p>

<% end %>