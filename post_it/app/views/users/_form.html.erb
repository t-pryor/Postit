<%= render '/shared/errors', obj: @user %>

<%= form_for(@user) do |f| %>
  <div class='well'>
    <div class='control-group'>
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true %>
    </div>

    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class='control-group'>
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
    </div>

    <p>
       <%= f.submit(@user.new_record? ? 'Register' : 'Update Profile', class: 'btn btn-postit-forms')%> &nbsp &nbsp
       <%= link_to 'Cancel', :back %>
    </p>
  </div>

<% end %>