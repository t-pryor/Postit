<% show_post ||= false %>      <!--default value-->

<div class='row'>
  <% if logged_in? %>
    <div class='span0 well text-center'>
      <%= link_to(vote_post_comment_path(comment.post, comment, :vote => true),
                  :method => 'post', :remote => true) do %>
        <i class='icon-arrow-up'></i>
      <% end %>
      <br/>
      <span id='comment_<%= comment.id %>_votes'>
        <%= pluralize(comment.total_votes, 'vote') %>
      </span>
      <br/>
      <%= link_to(vote_post_comment_path(comment.post, comment, :vote => false),
                  :method => 'post', :remote => true) do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    </div>
  <% end %>

  <div class='span8 well'>
    <em>"<%= comment.body %></em>
    <% if show_post %>
      on <%= link_to(comment.post.title, post_path(comment.post)) %>
    <% end %>
    <br/>
    <span class='quiet'>by</span> <%= link_to(comment.user.username, user_path(comment.user),
                                      :class => 'post-text') %>
    <small>at <%= display_datetime(comment.created_at) %></small>
  </div>
</div>